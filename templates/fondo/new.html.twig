{% extends 'base.html.twig' %}

{% block title %}New Fondo{% endblock %}

{% block body %}
    <h1>Create new Fondo</h1>

    <form name="fondo" method="post" action="{{path('fondo_insert')}}">
        <div id="fondo">
            <div>
                <label for="fondo_titulo" class="required">Titulo</label>
                <input type="text" id="fondo_titulo" name="fondo[titulo]" required="required" maxlength="255" />
            </div>
            <div>
                <label for="fondo_isbn" class="required">Isbn</label>
                <input type="text" id="fondo_isbn" name="fondo[isbn]" required="required" maxlength="17" />
            </div>
            <div><label for="fondo_edicion">Edicion</label><input type="number" id="fondo_edicion" name="fondo[edicion]" /></div>
            <div><label for="fondo_publicacion">Publicacion</label><input type="number" id="fondo_publicacion" name="fondo[publicacion]" /></div>
            <div><label for="fondo_categoria" class="required">Categoria</label><input type="text" id="fondo_categoria" name="fondo[categoria]" required="required" maxlength="50" /></div>
            <div>
                <label for="fondo_autores">Autores</label>
                <select id="fondo_autores" name="fondo[autoresIds][]" multiple="multiple">
                    {% for autor in autores %} 
                    <option value="{{ autor.id }}">{{ autor.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label for="fondo_editorial" class="required">Editorial</label>
                <select id="fondo_editorial" name="fondo[editorialId]">
                    {% for editorial in editoriales %} 
                    <option value="{{ editorial.id }}">{{ editorial.nombre }}</option>
                    {% endfor %} 
                </select>
            </div>
        </div>
        <button class="btn">Save</button>
    </form>

    <a href="{{ path('fondo_index') }}">back to list</a>
{% endblock %}
