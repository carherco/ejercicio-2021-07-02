{% extends 'base.html.twig' %}

{% block title %}Fondo index{% endblock %}

{% block body %}
    <h1>Fondo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Isbn</th>
                <th>Titulo</th>
                <th>Autor</th>
                <th>Editorial</th>
                <th>Edicion</th>
                <th>Publicacion</th>
                <th>Categoria</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fondo in fondos %}
            <tr>
                <td>{{ fondo.id }}</td>
                <td>{{ fondo.isbn }}</td>
                <td>{{ fondo.titulo }}</td>
                <td>
                {% for autor in fondo.autores %} 
                    <p>{{ autor.nombre }} ( {{ autor.tipo}} ) </p>
                {% else %} 
                    <div>An√≥nimo / Desconocido</div>
                {% endfor %}
                </td>
                <td>{{ fondo.editorial.nombre }}</td>
                <td>{{ fondo.edicion }}</td>
                <td>{{ fondo.publicacion }}</td>
                <td>{{ fondo.categoria }}</td>
                <td>
                    <a href="{{ path('fondo_show', {'id': fondo.id}) }}">show</a>
                    <a href="{{ path('fondo_edit', {'id': fondo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('fondo_new') }}">Create new</a>
{% endblock %}
